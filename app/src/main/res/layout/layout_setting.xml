<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBackground"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/colorNavigation" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorNavigation"
        android:theme="@style/ToolBarDark"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/setting" />

    <RelativeLayout
        android:id="@+id/rlSystemAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSystemAnimationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统动画"
            android:textColor="@color/colorTextEnable"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvSystemAnimationDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSystemAnimationTitle"
            android:layout_marginTop="4dp"
            android:text="在整个应用中，应用系统动画"
            android:textColor="@color/colorTextEnableGary"
            android:textSize="12sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/scSystemAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:theme="@style/CheckBoxAndSwitchTheme" />
    </RelativeLayout>

    <View style="@style/horizontalLine" />

    <RelativeLayout
        android:id="@+id/rlLauncherPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvLauncherPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动页妹子图"
            android:textColor="@color/colorTextEnable"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLauncherPageDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLauncherPageTitle"
            android:layout_marginTop="4dp"
            android:text="基佬怎么会需要妹子"
            android:textColor="@color/colorTextEnableGary"
            android:textSize="12sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/scLauncherPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:theme="@style/CheckBoxAndSwitchTheme" />
    </RelativeLayout>

    <View style="@style/horizontalLine" />

    <RelativeLayout
        android:id="@+id/rlLauncherPageRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvLauncherPageRandomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随机出现"
            android:textColor="@color/colorTextEnable"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLauncherPageRandomDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLauncherPageRandomTitle"
            android:layout_marginTop="4dp"
            android:text="我每次都要幸临，没毛病"
            android:textColor="@color/colorTextEnableGary"
            android:textSize="12sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/scLauncherPageRandom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:clickable="false"
            android:theme="@style/CheckBoxAndSwitchTheme" />
    </RelativeLayout>

    <View style="@style/horizontalLine" />
</LinearLayout>